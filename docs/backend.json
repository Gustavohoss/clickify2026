{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile in the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity, matching Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "plan": {
          "type": "string",
          "description": "The user's subscription plan.",
          "enum": ["Pendente", "Mensal", "Trimestral", "Anual", "Vitalicio"]
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": ["id", "email", "createdAt", "displayName", "plan"]
    },
    "Lead": {
      "title": "Lead",
      "type": "object",
      "description": "Represents a lead captured from the scraper.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the lead."
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who owns this lead."
        },
        "nome": {
          "type": "string",
          "description": "Name of the establishment."
        },
        "endereco": {
          "type": "string",
          "description": "Address of the establishment."
        },
        "horario": {
          "type": "string",
          "description": "Working hours."
        },
        "site": {
          "type": "string",
          "description": "Website URL."
        },
        "telefone": {
          "type": "string",
          "description": "Phone number."
        },
        "notes": {
          "type": "string",
          "description": "User notes for the lead."
        },
        "status": {
          "type": "string",
          "description": "Contact status of the lead.",
          "enum": ["Novo", "Contatado", "Em Negociação", "Fechado", "Perdido"]
        },
        "valorContrato": {
          "type": "number",
          "description": "The contract value if the lead is closed."
        },
        "ultimaInteracao": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last interaction with the lead."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the lead was saved."
        }
      },
      "required": ["id", "ownerId", "nome", "status", "createdAt", "ultimaInteracao"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information. The document ID is the user's Firebase Auth UID."
    },
    "/users/{userId}/leads/{leadId}": {
      "schema": {
        "$ref": "#/backend/entities/Lead"
      },
      "description": "Stores leads saved by a specific user."
    }
  }
}
